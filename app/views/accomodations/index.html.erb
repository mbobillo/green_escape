<div class="border-bottom d-flex flex-row justify-content-around py-3">
  <div class= "col-9 search-bar">
    <%= form_with url: root_path do |f| %>
      <%= f.label :destination, "Destination", class: "search-label" %>
      <%= f.text_field :destination, class: "search-input", placeholder: "Paris, France" %>
      <%= f.label :arrival, "Arrival", class: "search-label" %>
      <%= f.date_field :arrival, class: "search-input" %>
      <%= f.label :departure, "Departure", class: "search-label" %>
      <%= f.date_field :departure, class: "search-input" %>
      <%= f.label :guests, "Guests", class: "search-label" %>
      <%= f.select :guests, (1..10).to_a, class: "search-input" %>
      <%= f.submit "Search", class: "search-button" %>
    <% end %>
  </div>
</div>

<div class="container mx-5 mt-3">
  <div class="d-flex flex-row justify-content-between">
    <div class="d-flex flex-row justify-content-around mb-4 col-6">
      <div class="text-center">
        <i class="fa-solid fa-campground"></i><p class="category-picto">Cabin</p>
      </div>
      <div class="text-center">
        <i class="fa-solid fa-tent"></i><p class="category-picto">Yurt</p>
      </div>
      <div class="text-center">
        <i class="fa-solid fa-box"></i><p class="category-picto">Container</p>
      </div>
      <div class="text-center">
        <i class="fa-solid fa-house"></i><p class="category-picto">Tiny House</p>
      </div>
    </div>
    <div>
    </div class="col-3 text-center mb-4">
      <p class="border-filters margin-right"><i class="fa-solid fa-filter"></i>Advanced filters</p>
    </div>
  </div>
</div>
<div class="container">
  <div class="container col-7 mx-5">
    <div class= "wrapper">
      <% @accomodations.each do |a| %>
        <div class="card h-100" style="width: 100%">
          <%= link_to accomodation_path(a) do %>
          <img class="card-img-top img-custo" src="<%= a.images %>" alt="<%= a.title %>">
          <% end %>
          <div class="card-body">
            <div class="d-flex flex-row justify-content-between mb-1">
              <p class="tag"><%= a.category %></p>
              <p><strong><%= a.price %>â‚¬</strong>/night</p>
            </div>
            <h5 class="card-title"><%= link_to a.title, accomodation_path(a) %></h5>
            <p class="card-text"><%= a.description %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="container col-5 mx-5"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
 </div>
